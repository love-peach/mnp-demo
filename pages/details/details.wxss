}
.user {
  display: flex;
  padding-right: 26rpx;
  padding-left: 26rpx;
}
.user .user-avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 80rpx;
  margin-right: 20rpx;
}
.user .user-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.user .user-info .info-name {
  color: #333;
  font-size: 28rpx;
}
.user .user-info .info-mate-time {
  color: #9B9B9B;
  font-size: 24rpx;
  margin-top: 5rpx;
}

.content {
  margin-top: 20rpx;
}
.content .content-text {
  font-size: 30rpx;
}

