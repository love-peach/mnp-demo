/*=========================== 概览样式 start  ===========================*/
.overview {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background-color: #fff;
  border-top: 1px solid #EAEDF3;
}
.info-main {
  display: flex;
  flex-direction: column;
  /* flex-basis: 300rpx; */
  flex: 1;
}
.info-main .price-main {
  color: #019802;
  font-size: 48rpx;
  font-family: 'DIN Alternate';
  font-weight: bolder;
}
.info-main .price-sub {
  color: #4A4A4A;
}

.info-sub {
  display: flex;
  flex-direction: row;
  /* flex: 1; */
  flex-basis: 12em;
  flex-wrap: wrap;
  font-size: 28rpx;
}
.info-sub .sub-item {
  width: 50%;
  display: flex;
  flex-direction: column;
  margin: 5rpx 0;
}
.info-sub .item-title {
  color: #9B9B9B;
}
.info-sub .item-data {
  color: #191919;
  font-weight: 500;
}
.info-sub .item-data-positive {
  color: #019802;
}
.info-sub .item-data-positive::before {
   content: '+'; 
   position: relative;
   top: -2rpx;
}
.info-sub .item-data-negative {
  color: #E93030;
}

/*=========================== 概览样式 end  ===========================*/

/*=========================== 微博样式 start  ===========================*/
.discuss-part-title {
  margin-top: 20rpx;
  padding: 24rpx;
  text-align: center;
  color: #4A4A4A;
  font-size: 28rpx;
  font-weight: 500;
  border-bottom: 1px solid #EAEDF3;
  background-color: #fff;
}
.discuss {
  
}
.discuss-item-wrap {
  background-color: #fff;
  padding: 30rpx 0;
}
