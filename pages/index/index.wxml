<view class="container">

  <!-- 顶部搜索条 start  -->
    <view class="search-wrap">
      <navigator class="search-link" url="/pages/search/search" hover-class="none">
        <image class="search-icon" src="/res/img/icon_search.png" />
        <text class="search-text">请输入数字货币名称</text>
      </navigator>
    </view>
  <!-- 顶部搜索条 end  -->


  <!-- 列表 start  -->
  <view class="table-list">
    <!-- 列表头 -->
    <view class="tr table-head">
      <view class="th row-name">名称</view>
      <view class="th row-new">最新</view>
      <view
        class="{{[(rankColumn === 'changeDay') ? rankTypes[rankIndex]: '','th row-change']}}"
        bindtap="handleSwitchRank"
        data-column-name="changeDay" >
        <text>涨跌</text>
        <view class="triangle-wrap">
          <view class="triangle triangle-top"></view>
          <view class="triangle triangle-bottom"></view>
        </view>
      </view>
      <view
        class="{{[(rankColumn === 'changeWeek') ? rankTypes[rankIndex]: '','th row-change-week']}}"
        bindtap="handleSwitchRank"
        data-column-name="changeWeek" >
        <text>七天涨跌</text>
        <view class="triangle-wrap">
          <view class="triangle triangle-top"></view>
          <view class="triangle triangle-bottom"></view>
        </view>
      </view>
    </view>

    <!-- 列表body -->
    <navigator url="/pages/details/details?searchWord={{item.name}}" wx:for="{{listData}}" wx:key="{{index}}">
      <view class="tr">
        <view class="td row-name">{{item.name}}</view>
        <view class="td row-new">
          <view class="price-main">{{item.new}}</view>
          <view class="price-sub">{{item.new}}</view>
        </view>
        <view class="td row-change">
          <view class="card card-positive">{{item.change}}</view>
        </view>
        <view class="td row-change-week">
          <view class="card card-negative">{{item.changeWeek}}</view>
        </view>
      </view>
    </navigator>

  </view>
</view>
